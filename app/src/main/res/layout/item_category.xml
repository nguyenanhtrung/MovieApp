<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Widget.Material3.CardView.Filled"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_light_primary"
    app:cardBackgroundColor="@color/md_theme_light_inversePrimary"
    app:contentPadding="@dimen/normal_padding"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/md_theme_dark_inverseOnSurface"
        android:textAppearance="@style/App.Title.Medium"
        tools:text="Adventure"
        />

</com.google.android.material.card.MaterialCardView>