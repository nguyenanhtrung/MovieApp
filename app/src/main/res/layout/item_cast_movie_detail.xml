<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_cast_movie_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/RoundedImageShapeAppearance"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/text_cast_name_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        android:textAppearance="@style/App.Title.Medium"
        tools:text="@tools:sample/full_names"
        />

    <TextView
        android:id="@+id/text_char_name_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"
        android:textAppearance="@style/App.Body.Medium"
        android:gravity="center_horizontal"
        />

</LinearLayout>