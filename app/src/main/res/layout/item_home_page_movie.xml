<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_home_page_movie"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/RoundedImageShapeAppearance"
        tools:src="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/text_home_page_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="@tools:sample/full_names"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/App.Title.Medium"
        />

    <RatingBar
        android:id="@+id/rating_bar_home_page_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />

</LinearLayout>