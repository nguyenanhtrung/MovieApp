<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/small_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_info_movie_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Origin Title"
        android:textAppearance="@style/App.Body.Medium"
        app:layout_constraintEnd_toStartOf="@+id/text_content_info_movie_detail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_content_info_movie_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Movie Name asdad adad ad adada  ad"
        android:gravity="end"
        android:maxLines="3"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:layout_marginStart="@dimen/normal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/title_info_movie_detail"
        app:layout_constraintTop_toTopOf="@+id/title_info_movie_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>